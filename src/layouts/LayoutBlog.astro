---
import LayoutDefault from "./LayoutDefault.astro";

const { frontmatter } = Astro.props;
---

<LayoutDefault title={frontmatter.title} description={frontmatter.description} image={frontmatter.image.url}>
	<img src={frontmatter.image.url} alt={frontmatter.image.alt} />
	<time class="block" datetime={frontmatter.pubDate.toISOString().split("T")[0]}>
		{frontmatter.pubDate.toISOString().split("T")[0]}
	</time>
	<h1>{frontmatter.title}</h1>
	<slot />
</LayoutDefault>

<style>
	img {
		aspect-ratio: 21 / 9;
		object-fit: contain;
	}
</style>
